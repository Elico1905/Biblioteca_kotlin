<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/itsch_white">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_supeior"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vector_user"
            android:background="@drawable/edidttextredondo"
            android:textColor="@color/white"
            android:padding="5dp"
            android:drawablePadding="8dp"
            android:hint="Numero De Control"
            android:textColorHint="#77FFFFFF"
            android:lines="1"
            android:inputType="textAutoComplete"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edidttextredondo"
            android:layout_marginTop="20dp">
            <EditText

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vector_key"
                android:textColor="@color/white"
                android:padding="5dp"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:textColorHint="#77FFFFFF"
                android:inputType="textAutoComplete"
                android:background="@drawable/edidttextredondo"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/vector_eye"
                android:foreground="@drawable/effect_ripple_blue_color_2"
                android:clickable="true"
                android:layout_marginRight="5dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Entrar"
            android:textColor="@color/white"
            android:background="@drawable/edidttextredondo"
            android:padding="5dp"
            android:foreground="@drawable/effect_ripple_itsch_color"
            android:clickable="true"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>