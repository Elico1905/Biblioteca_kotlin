<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/itsch_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/svg_supeior"
            android:scaleType="fitXY"/>
    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical"
        android:rotationX="180"
        android:rotationY="180">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/svg_supeior" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido de nuevo!"
                android:textColor="@color/iletters_white"
                android:textSize="23sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Estas listo?"
                android:textColor="@color/itsch_white"
                android:textSize="30sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="15sp"/>

        </LinearLayout>
        



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vector_user"
            android:background="@drawable/edidttextredondo"
            android:textColor="@color/white"
            android:padding="5dp"
            android:drawablePadding="8dp"
            android:hint="Numero De Control"
            android:textColorHint="#77FFFFFF"
            android:lines="1"
            android:inputType="textAutoComplete"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edidttextredondo"
            android:layout_marginTop="15dp">
            <EditText
                android:id="@+id/pass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/vector_key"
                android:textColor="@color/white"
                android:padding="5dp"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:textColorHint="#77FFFFFF"
                android:inputType="textAutoComplete"
                android:background="@drawable/edidttextredondo"/>

            <ImageView
                android:id="@+id/ojo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/vector_eye"
                android:foreground="@drawable/effect_ripple_blue_color_2"
                android:clickable="true"
                android:layout_marginRight="5dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="200dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Entrar"
            android:textColor="@color/white"
            android:background="@drawable/edidttextredondo"
            android:padding="5dp"
            android:foreground="@drawable/effect_ripple_itsch_color"
            android:clickable="true"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Registrate aqui."
            android:textColor="@color/black"
            android:foreground="@drawable/effect_ripple_itsch_color"
            android:clickable="true"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_google"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:foreground="@drawable/effect_ripple_itsch_color"
            app:cardCornerRadius="40dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/vector_google" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>